{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "jsx": "preserve",
    "jsxImportSource": "fict",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "fict": ["packages/fict/src"],
      "fict/*": ["packages/fict/src/*"],
      "@fictjs/runtime": ["packages/runtime/src"],
      "@fictjs/runtime/*": ["packages/runtime/src/*"],
      "@fictjs/compiler": ["packages/compiler/src"],
      "@fictjs/compiler/*": ["packages/compiler/src/*"],
      "@fictjs/vite-plugin": ["packages/vite-plugin/src"],
      "@fictjs/eslint-plugin": ["packages/eslint-plugin/src"],
      "@fictjs/devtools": ["packages/devtools/src"],
      "@fictjs/ssr": ["packages/ssr/src"],
      "@fictjs/testing-library": ["packages/testing-library/src"]
    }
  },
  "include": ["packages/runtime/src/dev.d.ts"],
  "exclude": ["node_modules", "dist", "coverage"]
}
