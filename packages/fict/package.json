{
  "name": "fict",
  "version": "0.0.4",
  "description": "Main package for the Fict framework",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "fict",
    "framework",
    "ui",
    "reactive"
  ],
  "author": "Michael Lin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fictjs/fict.git",
    "directory": "packages/fict"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./slim": {
      "types": "./dist/slim.d.ts",
      "import": "./dist/slim.js",
      "require": "./dist/slim.cjs"
    },
    "./jsx-runtime": {
      "types": "./dist/jsx-runtime.d.ts",
      "import": "./dist/jsx-runtime.js",
      "require": "./dist/jsx-runtime.cjs"
    },
    "./jsx-dev-runtime": {
      "types": "./dist/jsx-dev-runtime.d.ts",
      "import": "./dist/jsx-dev-runtime.js",
      "require": "./dist/jsx-dev-runtime.cjs"
    },
    "./plus": {
      "types": "./dist/plus.d.ts",
      "import": "./dist/plus.js",
      "require": "./dist/plus.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:e2e": "playwright test --reporter=list",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@fictjs/runtime": "workspace:*",
    "@fictjs/vite-plugin": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "vite": "^7.3.0"
  }
}
