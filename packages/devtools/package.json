{
  "name": "@fictjs/devtools",
  "version": "0.0.3",
  "description": "Developer tools for Fict applications",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./vite": {
      "types": "./dist/vite/index.d.ts",
      "import": "./dist/vite/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "build"
  ],
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "pnpm build:lib && pnpm build:extension",
    "build:lib": "tsup",
    "build:extension": "vite build",
    "build:chrome": "vite build --mode chrome",
    "build:firefox": "vite build --mode firefox",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist build"
  },
  "dependencies": {
    "@fictjs/runtime": "workspace:*"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "tsup": "^8.5.1",
    "typescript": "^5.7.3",
    "vite": "^7.3.1"
  },
  "peerDependencies": {
    "vite": "^5.0.0 || ^6.0.0 || ^7.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    }
  },
  "keywords": [
    "fict",
    "devtools",
    "debugging",
    "reactive",
    "signals"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nickmccurdy/fict.git",
    "directory": "packages/devtools"
  }
}
