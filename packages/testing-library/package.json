{
  "name": "@fictjs/testing-library",
  "version": "0.4.0",
  "description": "Testing utilities for Fict components, built on @testing-library/dom",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fictjs/fict.git",
    "directory": "packages/testing-library"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@testing-library/dom": "^10.4.1"
  },
  "peerDependencies": {
    "@fictjs/runtime": ">=0.3.0"
  },
  "devDependencies": {
    "@fictjs/compiler": "workspace:*",
    "@fictjs/runtime": "workspace:*",
    "@fictjs/vite-plugin": "workspace:*",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/node": "^22.14.1",
    "jsdom": "^26.1.0",
    "tsup": "^8.5.1",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "fict",
    "testing",
    "testing-library",
    "test",
    "unit-test",
    "ui",
    "dom"
  ],
  "author": "unadlib",
  "license": "MIT"
}
